# MongoDB Connection URI
MONGODB_URI=your_mongodb_connection_string_here

# Server Port
PORT=5000

# JWT Secret Key (Change this to a secure random string in production)
JWT_SECRET=your-secret-key-change-this-in-production

# Node Environment
NODE_ENV=development

# Cloudinary Configuration (Required for image/video uploads)
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Admin Account Creation (Optional - only for createAdmin.js script)
# Add these temporarily when you need to create a new admin account
# Remove from .env after creating admin for security
ADMIN_NAME=Your Full Name
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=YourSecurePassword123!
ADMIN_PHONE=1234567890

# Facebook OAuth Configuration
# Get these from: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Razorpay Payment Gateway Configuration
# Get these from: https://dashboard.razorpay.com/app/keys
# For testing: Use Test Mode keys (rzp_test_...)
# For production: Use Live Mode keys (rzp_live_...)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Payment Mode Configuration
# Options: "simulated" or "razorpay"
# Use "simulated" for development/testing (no real money)
# Use "razorpay" for production (real payments)
PAYMENT_MODE=simulated
